package com.bdt;

import java.util.StringTokenizer;

public class StringManipulation {
	public static void main(String[] args) {
		String str="hi welcome to java string manipulation"+" abcd abcd";
		String words[]=str.split(" ");
		for(String word:words){
			System.out.println(word);
		}
		System.out.println("---------------");
		StringTokenizer words1=new StringTokenizer(str, "i",false);
		while(words1.hasMoreTokens()){
			System.out.println("string tokenizer:::"+words1.nextToken());
		}
	}
}

